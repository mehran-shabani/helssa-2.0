# Django Configuration
DEBUG=1
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
DATABASE_URL=sqlite:///db.sqlite3

# OpenAI Chatbot Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_REASONING_MODEL=o1
OPENAI_TIMEOUT=15
CHAT_MAX_HISTORY_TURNS=6
CHAT_SUMMARY_AFTER_TURNS=10

# CORS (for production)
CORS_ALLOWED_ORIGINS=
CSRF_TRUSTED_ORIGINS=

# Celery (optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Payment Gateway (existing app config)
PAYMENT_GATEWAY=bitpay
BITPAY_WEBHOOK_SECRET=your-webhook-secret
BITPAY_SIGNATURE_HEADER=X-Signature
BITPAY_TIMESTAMP_HEADER=X-Timestamp
PAY_SIG_MAX_SKEW_SECONDS=300
BITPAY_VERIFY_URL=https://bitpay.example/verify

# Performance Monitoring (optional)
ENABLE_PERF_SLOWLOG_BEAT=false
